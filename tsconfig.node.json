{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "bundler",
    "types": ["node", "electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@": ["src/main"],
      "@/*": ["src/main/*"],
      "@agents": ["src/main/agents"],
      "@agents/*": ["src/main/agents/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
